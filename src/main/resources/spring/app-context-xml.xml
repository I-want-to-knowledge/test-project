<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  <!--依赖注入-->
  <bean id="provider2" class="com.geo.source.spring_simple.example2.stereotype.HelloWorldMessageProvider"/>
  <bean id="renderer2" class="com.geo.source.spring_simple.example2.stereotype.StandardOutMessageRenderer2"
        p:messageProvider-ref="provider2"/>

  <!--查找方法注入-->
  <bean id="singer" class="com.geo.source.spring_simple.example2.lookup.Singer" scope="prototype"/>
  <bean id="abstractLookupBean" class="com.geo.source.spring_simple.example2.lookup.AbstractLookupDemoBean">
    <lookup-method name="getMySinger" bean="singer"/><!--标记查找getMySinger方法并覆盖，后返回singer！-->
  </bean>
  <bean id="standardLookupBean" class="com.geo.source.spring_simple.example2.lookup.StandardLookupDemoBean">
    <property name="mySinger" ref="singer"/><!--setter方法直接注入-->
  </bean>

</beans>